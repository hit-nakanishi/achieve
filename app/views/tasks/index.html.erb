<div class="container">
  <h1>タスク一覧</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>内　　容</th>
        <th>期　　限</th>
        <th>担　　当</th>
        <th>完　　了</th>
        <th>進捗状況</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user.name %></td>
          <td><%= task.title %></td>
          <td><%= simple_format task.content %></td>
          <td><%= task.deadline %></td>
          <td><%= task.charge_id %></td>
          <td><%= if task.done? then "完了" else "未完了" end %></td>
          <td><%= task.status == 1? "対応中" : "未着手" %></td>
          <td><%= link_to '詳細', user_task_path(task.user, task), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to '編集', edit_user_task_path(task.user, task), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to '削除', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'タスク登録', new_user_task_path(@user), class: 'btn btn-primary' %>
</div>
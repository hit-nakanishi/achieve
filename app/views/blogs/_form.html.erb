<%= form_for(@blog, url: choose_new_or_edit) do |f| %>

<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= f.text_field :title, class: 'form-control', placeholder: "タイトル" %>
<br>

<%= f.text_field :content, class: 'form-control', placeholder: "内　容" %>
<br>

<%= f.submit '内容確認', class: 'btn btn-primary btn-block' %>

<% end %>

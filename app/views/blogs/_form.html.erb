<%= form_for(@blog, url: choose_new_or_edit) do |f| %>

  <%= f.error_messages! %>

  <%= f.text_field :title, class: 'form-control', placeholder: "タイトル" %><br>
  <%= f.text_field :content, class: 'form-control', placeholder: "内　容" %><br>
  <%= f.hidden_field :user_id, :value => @blog.user_id %>

  <p>【ユーザID :】<%= @blog.user_id %>【ユーザ名 :】<%= @blog.user.name %></p>

  <%= f.submit '内容確認', class: 'btn btn-primary btn-block' %>

<% end %>

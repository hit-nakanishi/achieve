<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h2>ブログ一覧</h2>

    <%= link_to "ブログを投稿する", new_blog_path, class: 'btn btn-primary' %>

    <% @blogs.each do |blog| %>
      <div class="row">
        <h4>タイトル:<strong><%= blog.title %></strong></h4>
        <p>本文:<%= blog.content %></p>
        <div class="prof-img">
          <p><%= profile_img(blog.user) if profile_img(blog.user) %></p>
        </div>
        <p>【ユーザID :】<%= blog.user_id %>【ユーザ名 :】<%= blog.user.name %></p>

        <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
    <% end %>

  </div>
</div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    
    <h2>以下の内容で、送信する。</h2>

    <%= form_for(@blog) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <h4>タイトル:<strong><%= @blog.title %></strong></h4>
      <p>本文:<%= @blog.content %></p>
      <p>ユーザID :<%= @blog.user_id %></p>
      <p>【ユーザ名 :】<%= @blog.user.name %></p>

      <%= f.submit "投稿",class: 'btn btn-primary btn-block' %>

    <% end %>

    <%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>

      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
      
    <% end %>
    
  </div>
</div>